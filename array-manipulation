#include <stdio.h>

#define MAX 100

void inputArray(int arr[], int *n);
void displayArray(int arr[], int n);
int findMax(int arr[], int n);
int findMin(int arr[], int n);
void reverseArray(int arr[], int n);
void sortArray(int arr[], int n);
int linearSearch(int arr[], int n, int key);

int main() {
    int arr[MAX];
    int n = 0;
    int choice, key, index;

    while (1) {
        printf("\n=== Array Manipulation Menu ===\n");
        printf("1. Input Array\n");
        printf("2. Display Array\n");
        printf("3. Find Max & Min\n");
        printf("4. Reverse Array\n");
        printf("5. Sort Array\n");
        printf("6. Search Element\n");
        printf("0. Exit\n");
        printf("Choose: ");
        scanf("%d", &choice);

        switch (choice) {
        case 1:
            inputArray(arr, &n);
            break;

        case 2:
            displayArray(arr, n);
            break;

        case 3:
            if (n == 0) {
                printf("Array is empty.\n");
            } else {
                printf("Max: %d\n", findMax(arr, n));
                printf("Min: %d\n", findMin(arr, n));
            }
            break;

        case 4:
            reverseArray(arr, n);
            printf("Array reversed.\n");
            break;

        case 5:
            sortArray(arr, n);
            printf("Array sorted.\n");
            break;

        case 6:
            printf("Enter value to search: ");
            scanf("%d", &key);
            index = linearSearch(arr, n, key);
            if (index == -1)
                printf("Element not found.\n");
            else
                printf("Element found at index %d.\n", index);
            break;

        case 0:
            printf("Exiting program.\n");
            return 0;

        default:
            printf("Invalid choice.\n");
        }
    }
}

/* Function Definitions */

void inputArray(int arr[], int *n) {
    printf("Enter number of elements: ");
    scanf("%d", n);

    for (int i = 0; i < *n; i++) {
        printf("arr[%d]: ", i);
        scanf("%d", &arr[i]);
    }
}

void displayArray(int arr[], int n) {
    if (n == 0) {
        printf("Array is empty.\n");
        return;
    }

    printf("Array: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}

int findMax(int arr[], int n) {
    int max = arr[0];
    for (int i = 1; i < n; i++)
        if (arr[i] > max)
            max = arr[i];
    return max;
}

int findMin(int arr[], int n) {
    int min = arr[0];
    for (int i = 1; i < n; i++)
        if (arr[i] < min)
            min = arr[i];
    return min;
}

void reverseArray(int arr[], int n) {
    for (int i = 0; i < n / 2; i++) {
        int temp = arr[i];
        arr[i] = arr[n - i - 1];
        arr[n - i - 1] = temp;
    }
}

void sortArray(int arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
}

int linearSearch(int arr[], int n, int key) {
    for (int i = 0; i < n; i++) {
        if (arr[i] == key)
            return i;
    }
    return -1;
}
